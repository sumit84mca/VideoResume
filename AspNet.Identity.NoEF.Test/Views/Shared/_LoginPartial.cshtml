@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + @ViewData["UserName"] + "!", "ProfileIndex", "Profile", routeValues: null, htmlAttributes: new { title = "Manage Profile" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "homeLink" })</li>
        <li>@Html.ActionLink("About Us", "Index", "Home", routeValues: null, htmlAttributes: new { id = "aboutLink" })</li>
        <li>@Html.ActionLink("Candidate", "Register", "Account", routeValues: new { type = "candidate" }, htmlAttributes: new { id = "candLink" })</li>
        <li>@Html.ActionLink("Corporate", "Register", "Account", routeValues: new { type = "corporate" }, htmlAttributes: new { id = "corpLink" })</li>
        <li>@Html.ActionLink("Consultant", "Register", "Account", routeValues: new { type = "consultant" }, htmlAttributes: new { id = "consLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
