@model AspNet.Identity.NoEF.Test.Models.RegisterViewModel
@{
    ViewBag.Title = "Manage Profile";
}

<div class="container">
    <h2>@ViewBag.Title.</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <img src="~/img/dog.png" class="img-circle" alt="Profile picture" width="204" height="236">
                    </div>
                    <div class="panel-footer">
                        <span class="glyphicon glyphicon-user"></span>

                        @Model.Name

                    </div>
                </div>

            </div>
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;&nbsp;Contact Information</div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.Partial("AddressPartial")
                        </div>
                        <div class="form-group">
                            @Html.Label("Mobile", new { @class = "col-md-2 control-label" })
                            <div>
                                <span class="glyphicon glyphicon-phone"></span>
                                @Model.MobileNo
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Email Id", new { @class = "col-md-2 control-label" })
                            <div>
                                <span class="glyphicon glyphicon-envelope"></span>
                                @Model.Email
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">

                <ul class="list-group">
                    <li class="list-group-item">
                        <b>Actions</b>
                    </li>
                    <li class="list-group-item">
                        <span class="glyphicon glyphicon-pencil"></span>
                        @Html.ActionLink("Change your profile picture", "ChangeProfilePic", "Manage")
                    </li>
                    <li class="list-group-item">
                        <span class="glyphicon glyphicon-pencil"></span>
                        @Html.ActionLink("Change your password", "ChangePassword", "Manage")
                    </li>
                    <li class="list-group-item">
                        <span class="glyphicon glyphicon-pencil"></span>
                        @Html.ActionLink("Change your address", "ChangeAddress")
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>

